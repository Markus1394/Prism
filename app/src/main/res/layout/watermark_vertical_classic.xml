<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watermarkBG"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="24dp"
    android:gravity="center"
    android:background="@color/watermark_bg_light">

    <!-- EXIF Text on top (rotated) -->
    <TextView
        android:id="@+id/watermarkEXIFDataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="@color/watermark_text_dark"
        android:alpha="0.6"
        android:rotation="90"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:letterSpacing="0.02"
        tools:text="ISO 100 • 26mm • f/1.8" />

    <!-- Spacer -->
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Main Text (rotated) -->
    <TextView
        android:id="@+id/watermarkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/watermark_text_dark"
        android:rotation="90"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:letterSpacing="0.05"
        tools:text="Shot on PRISM" />

    <!-- Spacer -->
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Logo at bottom -->
    <ImageView
        android:id="@+id/watermarkLogo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="@string/cd_watermark_logo"
        tools:src="@drawable/logo_prism" />

</LinearLayout>